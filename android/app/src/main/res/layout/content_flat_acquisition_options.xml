<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.gb.GbmsapiGuiJniAndroid.FlatSingleFingerAcquisitionOptions"
    tools:showIn="@layout/activity_flat_acquisition_options">

    <Switch
        android:id="@+id/switchAutoCapture"
        android:text="Auto-Capture"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/DeviceFeaturesComboBox"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textOff="No"
        android:textOn="Yes"
        android:gravity="center"
        android:padding="40dp"/>

    <Switch
        android:id="@+id/switchFullResPreview"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/switchFlatFingerOnRollArea"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/switchAutoCapture"
        android:text="Full Resolution Preview"
        android:textOff="No"
        android:textOn="Yes"
        android:gravity="center"
        android:padding="40dp"/>

    <Switch
        android:id="@+id/switchFlatFingerOnRollArea"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Flat Finger On Roll Area"
        app:layout_constraintTop_toBottomOf="@+id/switchFullResPreview"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textOff="No"
        android:textOn="Yes"
        android:gravity="center"
        android:padding="40dp"/>
</android.support.constraint.ConstraintLayout>
