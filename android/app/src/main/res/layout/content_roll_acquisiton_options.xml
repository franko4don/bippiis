<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.gb.GbmsapiGuiJniAndroid.RollAcquisitonOptions"
    tools:showIn="@layout/activity_roll_acquisiton_options">
    <RadioGroup
        android:id="@+id/rgRollPreviewOptions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/rbSideRollPreview"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Side Roll Preview"
            app:layout_constraintBottom_toTopOf="@+id/rbCenterRollPreview"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:gravity="center_vertical"
            android:padding="25dp"/>

        <RadioButton
            android:id="@+id/rbCenterRollPreview"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Center Roll Preview"
            app:layout_constraintBottom_toTopOf="@+id/rbManualRollPreviewStop"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/rbSideRollPreview"
            android:gravity="center_vertical"
            android:padding="25dp"/>

        <RadioButton
            android:id="@+id/rbManualRollPreviewStop"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Manual Roll Preview Stop"
            app:layout_constraintBottom_toTopOf="@+id/rbNoRollPreview"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/rbCenterRollPreview"
            android:gravity="center_vertical"
            android:padding="25dp"/>

        <RadioButton
            android:id="@+id/rbNoRollPreview"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="No Roll Preview"
            app:layout_constraintTop_toBottomOf="@+id/rbManualRollPreviewStop"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:gravity="center_vertical"
            android:padding="25dp"/>

    </RadioGroup>
</androidx.constraintlayout.widget.ConstraintLayout>
